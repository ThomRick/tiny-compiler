{
  "name": "tiny-compiler",
  "version": "1.0.0",
  "description": "A tiny compiler written in Javascript following TDD rules",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThomRick/tiny-compiler.git"
  },
  "scripts": {
    "build": "tsc",
    "test": "nyc mocha src/tokenizer/**/*.spec.ts src/parsers/**/*.spec.ts src/emitters/**/*.spec.ts --require ts-node/register --reporter spec",
    "start": "node main.js",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "author": "ThomRick",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.0.25",
    "@types/sinon": "^2.3.3",
    "chai": "^3.5.0",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "sinon": "^3.2.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
